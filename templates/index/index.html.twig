{% extends 'base.html.twig' %}

{% block title %}Welcome to NXDOne ERP{% endblock %}

{% block body %}

    {# Hero Section #}
    <section class="hero-section bg-primary bg-gradient text-white py-5">
        <div class="container py-5">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h1 class="display-4 fw-bold mb-4">Transform Your Business with NXDOne</h1>
                    <p class="lead mb-4">The next-generation ERP solution designed for modern enterprises with real-time analytics and AI-powered automation.</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="{{ path('index') }}" class="btn btn-light btn-lg px-4">Get Started</a>
                        <a href="{{ path('index') }}" class="btn btn-outline-light btn-lg px-4">Learn More</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="{{ asset('images/hero-dashboard.png') }}" alt="NXDOne Dashboard" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </section>

    {# Features Section #}
    <section class="py-5">
        <div class="container py-5">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Powerful Features</h2>
                <p class="lead text-muted">Everything you need to streamline your operations</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 mb-3 mx-auto" style="width: 60px; height: 60px;">
                                <i class="fas fa-chart-line fa-2x"></i>
                            </div>
                            <h4 class="mb-3">Real-Time Analytics</h4>
                            <p class="text-muted">Make data-driven decisions with live dashboards and customizable reports.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 mb-3 mx-auto" style="width: 60px; height: 60px;">
                                <i class="fas fa-robot fa-2x"></i>
                            </div>
                            <h4 class="mb-3">AI Automation</h4>
                            <p class="text-muted">Reduce manual work by 70% with smart process automation.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 mb-3 mx-auto" style="width: 60px; height: 60px;">
                                <i class="fas fa-cloud fa-2x"></i>
                            </div>
                            <h4 class="mb-3">Cloud-Based</h4>
                            <p class="text-muted">Access your ERP anytime, anywhere with enterprise-grade security.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# CTA Section #}
    <section class="bg-light py-5">
        <div class="container py-5 text-center">
            <h2 class="fw-bold mb-4">Ready to get started?</h2>
            <p class="lead text-muted mb-5">Join hundreds of enterprises transforming their operations with NXDOne.</p>
            <a href="{{ path('index') }}" class="btn btn-primary btn-lg px-5">Start Free Trial</a>
        </div>
    </section>
{% endblock %}
