<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}NXDOne ERP{% endblock %}</title>

    {# Bootstrap 5 CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Font Awesome for icons #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {# Custom CSS #}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body>
{# Navigation Bar #}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container">
        <a class="navbar-brand" href="{{ path('index') }}">
            <i class="fas fa-cubes me-2"></i>NXDOne
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {{ app.current_route == '' ? 'active' }}" href="{{ path('index') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.current_route starts with '' ? 'active' }}" href="{{ path('index') }}">Features</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        Solutions
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Finance</a></li>
                        <li><a class="dropdown-item" href="#">Inventory</a></li>
                        <li><a class="dropdown-item" href="#">HR</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.current_route == '' ? 'active' }}" href="{{ path('index') }}">Contact</a>
                </li>
            </ul>

            <div class="d-flex">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="dropdown">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle me-1"></i> {{ app.user.firstName }}
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="{{ path('app_profile') }}">Profile</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
                        </ul>
                    </div>
                {% else %}
                    <a href="{{ path('index') }}" class="btn btn-outline-light me-2">Login</a>
                    <a href="{{ path('index') }}" class="btn btn-light">Register</a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>

{# Flash Messages #}
<div class="container mt-3">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

{# Main Content #}
<main class="container my-5">
    {% block body %}{% endblock %}
</main>

{# Footer #}
<footer class="bg-dark text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-4 mb-lg-0">
                <h5 class="mb-3">NXDOne ERP</h5>
                <p>Next-generation enterprise resource planning for modern businesses.</p>
                <div class="social-icons">
                    <a href="#" class="text-white me-2"><i class="fab fa-linkedin fa-lg"></i></a>
                    <a href="#" class="text-white me-2"><i class="fab fa-twitter fa-lg"></i></a>
                    <a href="#" class="text-white me-2"><i class="fab fa-facebook fa-lg"></i></a>
                </div>
            </div>
            <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                <h5 class="mb-3">Product</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a href="#" class="text-white-50">Features</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50">Pricing</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50">API</a></li>
                </ul>
            </div>
            <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                <h5 class="mb-3">Resources</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a href="#" class="text-white-50">Documentation</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50">Blog</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50">Support</a></li>
                </ul>
            </div>
            <div class="col-lg-4 col-md-6">
                <h5 class="mb-3">Contact Us</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> 123 Business Ave, Suite 100</li>
                    <li class="mb-2"><i class="fas fa-phone me-2"></i> +1 (555) 123-4567</li>
                    <li class="mb-2"><i class="fas fa-envelope me-2"></i> info@nxdone.com</li>
                </ul>
            </div>
        </div>
        <hr class="my-4 bg-secondary">
        <div class="row">
            <div class="col-md-6 text-center text-md-start">
                <p class="small mb-0">&copy; {{ "now"|date("Y") }} NXDOne. All rights reserved.</p>
            </div>
            <div class="col-md-6 text-center text-md-end">
                <p class="small mb-0">
                    <a href="#" class="text-white-50">Privacy Policy</a> |
                    <a href="#" class="text-white-50">Terms of Service</a>
                </p>
            </div>
        </div>
    </div>
</footer>

{# Bootstrap 5 JS Bundle with Popper #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

{# Custom JS #}
<script src="{{ asset('js/app.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>